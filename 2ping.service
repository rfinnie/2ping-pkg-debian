# To modify listener options, create
# /etc/systemd/system/2ping.service.d/local.conf
# with options to override, for example:
#
# [Service]
# ExecStart=
# ExecStart=/usr/bin/2ping --listen -q -I 127.0.0.1

[Unit]
Description=ping utility to determine directional packet loss
Documentation=man:2ping(1) http://www.finnie.org/software/2ping/

[Service]
User=nobody
ExecStart=/usr/bin/2ping --listen -q

[Install]
WantedBy=multi-user.target
